{
  "protocol_id":"AIRS_BASELINE_V0_1",
  "mode":"baseline_testing",
  "strict_json":true,
  "rules":{
    "no_silent_failure":true,
    "one_action_one_response":true,
    "deterministic_required":true,
    "schema_mandatory":true,
    "metrics_before_interpretation":true,
    "semantic_uncertainty_is_not_failure":true
  },
  "workflow":[
    {
      "phase":"sanity",
      "actions":[
        {"command":"list_engines"},
        {"command":"describe_engine","params":{"engine_id":"ANY"}}
      ],
      "metrics":{
        "startup_time_ms":true,
        "schema_validation_pass":true,
        "parse_error_count":true
      }
    },
    {
      "phase":"intake",
      "actions":[
        {"ssot_query":{"query_type":"narrow","limit":5}},
        {"ssot_query":{"query_type":"ambiguous","limit":10}},
        {"ssot_query":{"query_type":"broad","limit":25}}
      ],
      "metrics":{
        "execution_time_ms":true,
        "result_count":true,
        "empty_result_rate":true,
        "sanitization_applied":true
      }
    },
    {
      "phase":"transport",
      "actions":[
        {"operation":"ssot_to_simulation_passthrough"}
      ],
      "metrics":{
        "field_preservation_rate":true,
        "serialization_roundtrip_loss":true,
        "ordering_changes":true
      }
    },
    {
      "phase":"execution",
      "actions":[
        {"command":"create_engine","params":{"seed":42}},
        {"command":"evolve","params":{"timesteps":5,"dt":0.01}},
        {"command":"get_state","params":{"format":"json"}}
      ],
      "metrics":{
        "execution_time_ms":true,
        "memory_delta_mb":true,
        "state_vector_size":true,
        "invariant_violation_count":true,
        "determinism_hash":true
      }
    },
    {
      "phase":"record",
      "actions":[
        {"operation":"persist_inputs"},
        {"operation":"persist_outputs"},
        {"operation":"persist_metrics"}
      ],
      "metrics":{
        "persistence_success":true,
        "artifact_integrity_hash":true
      }
    }
  ],
  "failure_modes":[
    {
      "code":"SCHEMA_VIOLATION",
      "trigger":"json_parse_error OR schema_validation_fail",
      "classification":"system_failure",
      "severity":"high",
      "action":"halt_phase"
    },
    {
      "code":"SILENT_MUTATION",
      "trigger":"field_preservation_rate < 1.0",
      "classification":"system_failure",
      "severity":"high",
      "action":"halt_pipeline"
    },
    {
      "code":"NON_DETERMINISM",
      "trigger":"determinism_hash_mismatch",
      "classification":"system_failure",
      "severity":"high",
      "action":"flag_engine"
    },
    {
      "code":"INVARIANT_BREACH",
      "trigger":"invariant_violation_count > 0",
      "classification":"system_failure",
      "severity":"critical",
      "action":"halt_pipeline"
    },
    {
      "code":"EMPTY_RESULTS",
      "trigger":"result_count == 0",
      "classification":"semantic_outcome",
      "severity":"none",
      "action":"record_only"
    },
    {
      "code":"HIGH_LATENCY",
      "trigger":"execution_time_ms > threshold",
      "classification":"performance_signal",
      "severity":"medium",
      "action":"record_and_continue"
    }
  ],
  "calibration":{
    "allowed_parameters":[
      "ssot_sensitivity",
      "result_limit",
      "timeout_ms",
      "engine_timestep",
      "engine_seed"
    ],
    "disallowed_parameters":[
      "error_definitions",
      "schema_meaning",
      "metric_semantics"
    ],
    "method":"single_parameter_delta",
    "comparison_basis":"identical_input_replay"
  },
  "expected_artifacts":[
    "baseline_metrics.json",
    "failure_log.json",
    "input_output_trace.json",
    "calibration_deltas.json"
  ]
}
