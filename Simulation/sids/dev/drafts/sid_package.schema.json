{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/sid-package.schema.json",
  "title": "SID Package Schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["dofs", "csis", "diagrams"],
  "properties": {
    "dofs": {
      "type": "array",
      "items": { "$ref": "#/$defs/DOF" }
    },
    "csis": {
      "type": "array",
      "items": { "$ref": "#/$defs/CSI" }
    },
    "compartments": {
      "type": "array",
      "items": { "$ref": "#/$defs/Compartment" }
    },
    "diagrams": {
      "type": "array",
      "items": { "$ref": "#/$defs/Diagram" }
    },
    "constraints": {
      "type": "array",
      "items": { "$ref": "#/$defs/Constraint" }
    },
    "rewrite_rules": {
      "type": "array",
      "items": { "$ref": "#/$defs/RewriteRule" }
    },
    "crf_procedures": {
      "type": "array",
      "items": { "$ref": "#/$defs/CRFProcedure" }
    },
    "metrics": {
      "type": "array",
      "items": { "$ref": "#/$defs/Metric" }
    },
    "states": {
      "type": "array",
      "items": { "$ref": "#/$defs/SIDState" }
    }
  },
  "$defs": {
    "DOF": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "group": { "type": "string" },
        "meta": { "type": "object" }
      }
    },
    "CSI": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "allowed_dofs"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "allowed_dofs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "allowed_pairs": {
          "type": "array",
          "items": {
            "type": "array",
            "minItems": 2,
            "maxItems": 2,
            "items": { "type": "string", "minLength": 1 }
          }
        },
        "description": { "type": "string" }
      }
    },
    "Compartment": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "index"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "index": { "type": "integer" },
        "meta": { "type": "object" }
      }
    },
    "Operator": {
      "type": "string",
      "enum": ["P", "S_PLUS", "S_MINUS", "O", "C", "T"]
    },
    "INU": {
      "type": "string",
      "enum": ["I", "N", "U"]
    },
    "Node": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "op"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "op": { "$ref": "#/$defs/Operator" },
        "inputs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "dof_refs": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "irreversible": { "type": "boolean" },
        "meta": { "type": "object" }
      }
    },
    "Edge": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "from", "to"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "from": { "type": "string", "minLength": 1 },
        "to": { "type": "string", "minLength": 1 },
        "label": { "type": "string" },
        "meta": { "type": "object" }
      }
    },
    "Diagram": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "nodes"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "nodes": {
          "type": "array",
          "items": { "$ref": "#/$defs/Node" }
        },
        "edges": {
          "type": "array",
          "items": { "$ref": "#/$defs/Edge" }
        },
        "compartment_id": { "type": "string" },
        "meta": { "type": "object" }
      }
    },
    "Constraint": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "type", "scope", "predicate"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "enum": ["hard", "soft"] },
        "scope": { "type": "string", "enum": ["local", "global"] },
        "predicate": { "type": "string", "minLength": 1 },
        "on_violation": {
          "type": "string",
          "enum": ["attenuate", "defer", "partition", "escalate", "bifurcate", "halt"]
        },
        "meta": { "type": "object" }
      }
    },
    "RewriteRule": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id"],
      "anyOf": [
        { "required": ["pattern", "replacement"] },
        { "required": ["pattern_expr", "replacement_expr"] }
      ],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "pattern": { "type": "string", "minLength": 1 },
        "replacement": { "type": "string", "minLength": 1 },
        "pattern_expr": { "type": "string", "minLength": 1 },
        "replacement_expr": { "type": "string", "minLength": 1 },
        "preconditions": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "meta": { "type": "object" }
      }
    },
    "CRFProcedure": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "steps"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "steps": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "meta": { "type": "object" }
      }
    },
    "SIDState": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "diagram_id", "csi_id"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "diagram_id": { "type": "string", "minLength": 1 },
        "csi_id": { "type": "string", "minLength": 1 },
        "compartment_id": { "type": "string" },
        "inu_labels": {
          "type": "object",
          "patternProperties": {
            ".*": { "$ref": "#/$defs/INU" }
          }
        },
        "meta": { "type": "object" }
      }
    },
    "Metric": {
      "type": "object",
      "additionalProperties": false,
      "required": ["id", "compute"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "compute": { "type": "string", "minLength": 1 },
        "dependencies": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 }
        },
        "meta": { "type": "object" }
      }
    }
  }
}
